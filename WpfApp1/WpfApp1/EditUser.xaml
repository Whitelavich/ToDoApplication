<Window x:Class="WpfApp1.EditUser"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="EditUser" Height="194.118" Width="362.605">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Label Content="Email: " VerticalAlignment="Center"/>
        <TextBox x:Name="txtEmail" Grid.Column="1" Height="30" VerticalAlignment="Center" Margin="5"/>
        <Label Content="Password: " VerticalAlignment="Center" Grid.Row="1"/>
        <PasswordBox x:Name="txtPassword" Grid.Row="1" Grid.Column="1" Height="30" VerticalAlignment="Center" Margin="5"/>
        <Button x:Name="btnSave" Content="Save Changes" Grid.Row="2" Height="30" Grid.ColumnSpan="2" Margin="5" Click="BtnSave_Click"/>


    </Grid>
</Window>
