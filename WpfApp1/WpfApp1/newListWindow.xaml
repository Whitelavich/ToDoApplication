<Window x:Name="newListWindow" x:Class="WpfApp1.Window2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="New List" Height="142" Width="226">
    <Grid Margin="0,0,100,316">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition Width="53*"/>
            <ColumnDefinition Width="6*"/>
        </Grid.ColumnDefinitions>
        <Label x:Name="nameLabel" Content="Name: " HorizontalAlignment="Left" Margin="10,10,0,-36" VerticalAlignment="Top" Height="26" Width="48" Grid.ColumnSpan="2"/>
        <TextBox x:Name="nameText" HorizontalAlignment="Left" Height="23" Margin="72,10,-74,-33" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Grid.ColumnSpan="3"/>
        <Button Content="Save and Continue" HorizontalAlignment="Left" Margin="72,59,-74,-79" VerticalAlignment="Top" Width="120" Height="20" Grid.ColumnSpan="3" Click="Button_Click"/>

    </Grid>
</Window>
