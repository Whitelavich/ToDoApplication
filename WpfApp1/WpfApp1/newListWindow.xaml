<Window x:Name="newListWindow" x:Class="WpfApp1.NewListWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="New List" Height="142" Width="226">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Label x:Name="nameLabel" Content="Name: " VerticalAlignment="Center" Height="26" Width="50"/>
        <TextBox x:Name="nameText" Grid.Column="1" HorizontalAlignment="Stretch" Height="30" TextWrapping="Wrap" Margin="5" />
        <Button Content="Save and Continue" HorizontalAlignment="Stretch" Height="20" Grid.Row="1" Grid.ColumnSpan="2" Click="Button_Click" Margin="5"/>

    </Grid>
</Window>
